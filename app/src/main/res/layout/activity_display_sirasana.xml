<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplaySirasana">

    <ImageView
        android:id="@+id/dsirasanaimg"
        android:layout_width="233dp"
        android:layout_height="276dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="319dp"
        android:src="@drawable/dsirasana"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="30dp"
        android:text="SIRASANA"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dsirasanaimg" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="338dp"
        android:layout_height="76dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="110dp"
        android:text="In the Supported Headstand (Salamba Shirshasana), the body is completely inverted, and held upright supported by the forearms and the crown of the head."
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

</androidx.constraintlayout.widget.ConstraintLayout>