<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayWindrelease">

    <ImageView
        android:id="@+id/dwindreleaseimg"
        android:layout_width="233dp"
        android:layout_height="276dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="89dp"
        android:src="@drawable/windrelease"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="264dp"
        android:layout_height="37dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="10dp"
        android:text="PAVANAMUKTASANA"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dwindreleaseimg" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="336dp"
        android:layout_height="140dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="72dp"
        android:text="This yoga pose helps in digestion and release of gas. It enhances blood circulation in the hip joints and eases tension in the lower back. You can practice it in the following way. Lift your right knee and bring it towards your chest and press your abdomen with your thigh and repeat this with your left knee."
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>